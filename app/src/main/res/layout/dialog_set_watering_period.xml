<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddPotActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Watering every"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/primaryDarkColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button_save_watering_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup_WP"
        app:layout_constraintStart_toStartOf="@+id/radioGroup_WP"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_WP" />

    <RadioGroup
        android:id="@+id/radioGroup_WP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/radioButton_WP_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"

            android:text="1 time in 1 day" />

        <RadioButton
            android:id="@+id/radioButton_WP_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 time in 2 days"
            app:layout_constraintEnd_toEndOf="@+id/radioButton_WP_1"
            app:layout_constraintStart_toStartOf="@+id/radioButton_WP_1"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_WP_1"
            />

        <RadioButton
            android:id="@+id/radioButton_WP_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 time in 3 days"
            app:layout_constraintEnd_toEndOf="@+id/radioButton_WP_2"
            app:layout_constraintStart_toStartOf="@+id/radioButton_WP_2"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_WP_2"
            />
        <RadioButton
            android:id="@+id/radioButton_WP_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 time in 4 days"
            app:layout_constraintEnd_toEndOf="@+id/radioButton_WP_3"
            app:layout_constraintStart_toStartOf="@+id/radioButton_WP_3"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_WP_3"
            />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>